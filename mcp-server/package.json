{
  "name": "godot-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Godot game engine integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "godot-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "build": "tsc && node scripts/build-visualizer.js",
    "build:visualizer": "node scripts/build-visualizer.js",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsc && node scripts/build-visualizer.js && node dist/index.js",
    "watch": "tsc --watch"
  },
  "keywords": [
    "mcp",
    "godot",
    "game-development",
    "ai-assistant"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  }
}
